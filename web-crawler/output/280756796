#include &lt;stdio.h&gt;<br /><br />long factorial(int m,int n){<br />	long sum=1,sum1=1;<br />	int i;<br />	if(m-n&gt;n){<br />		for(i=m;i&gt;m-n;i--)sum*=i;<br />		for(i=2;i&lt;=n;i++)sum1*=i;<br />		return sum/sum1;}<br />	else {<br />		for(i=m;i&gt;n;i--)sum*=i;<br />		for(i=2;i&lt;=m-n;i++)sum1*=i;<br />		return sum/sum1;<br />	}<br />}<br /><br />void main()<br />{<br />	int m,n;<br />	long sum;<br />	do{<br />		printf(&quot;Enter m n:&quot;);<br />		scanf(&quot;%d%d&quot;,&m,&n);<br />	}while(m&lt;n);<br />	sum=factorial(m,n);<br />	printf(&quot;%ld&#92;n供害垛轿艹计讹袭番陋&quot;,sum);<br />}
